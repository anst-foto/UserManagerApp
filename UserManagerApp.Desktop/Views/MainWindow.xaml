<Window x:Class="UserManagerApp.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:UserManagerApp.Desktop.Components"
        
        Title="MainWindow" 
        
        Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowStyles.xaml"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0"/>
        
        <StackPanel Orientation="Vertical" 
                    Grid.Column="1">
            <c:InputComponent Label="ID"
                              Value=""/>
            <c:InputComponent Label="Фамилия"
                              Value=""/>
            <c:InputComponent Label="Имя"
                              Value=""/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Сохранить"
                        Template="{StaticResource ResourceKey=Template_Button}"
                        Style="{StaticResource ResourceKey=Style_Button_Save}"/>
                <Button Content="Удалить"
                        Template="{StaticResource ResourceKey=Template_Button}"
                        Style="{StaticResource ResourceKey=Style_Button_Delete}"/>
                <Button Content="Очистить"
                        Template="{StaticResource ResourceKey=Template_Button}"
                        Style="{StaticResource ResourceKey=Style_Button_Clear}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

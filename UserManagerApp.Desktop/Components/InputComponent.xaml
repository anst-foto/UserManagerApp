<UserControl x:Class="UserManagerApp.Desktop.Components.InputComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Component">
    <UserControl.Resources>
        <ResourceDictionary Source="InputComponentStyles.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="{Binding ElementName=Component, Path=Label, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
               Target="{Binding ElementName=Input}"
               Style="{StaticResource ResourceKey=Style_Label}"
               Grid.Column="0"/>
        <TextBox x:Name="Input"
                 Text="{Binding ElementName=Component, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource ResourceKey=Style_Input}"
                 Grid.Column="1"/>
    </Grid>
</UserControl>
